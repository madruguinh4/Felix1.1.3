<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Confira os dados abaixo para finalizar o cadastro!"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp">


        <TextView
            android:id="@+id/textViewText"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="Nome: " />


        <TextView
            android:id="@+id/textViewFinalizaCadastroProfissional1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="7dp"
        >

        <TextView
            android:id="@+id/textViewFinaliza"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Sobrenome : " />

        <TextView
            android:id="@+id/textViewFinalizaCadastroProfissional2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sobrenome" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"

        >
        <TextView
            android:id="@+id/textViewFinalizaCada"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="E-mail:" />


        <TextView
            android:id="@+id/textViewFinalizaCadastroProfissional3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="E-mail" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewFinalizaCadastroProfi"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Telefone: " />

        <TextView
            android:id="@+id/textViewFinalizaCadastroProfissional4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Telefone" />

    </LinearLayout>


    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Voce está se cadastrando em" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"

        >


        <TextView
            android:id="@+id/textViewCadastrocategori"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Categoria:" />

        <TextView
            android:id="@+id/textViewCadastrocategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Categoria" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textViewCadastroServic"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Serviço:" />

        <TextView
            android:id="@+id/textViewCadastroServico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Serviço" />


    </LinearLayout>


    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Se todos os dados estão corretos clique em cadastrar!"
        android:textAlignment="center" />


    <Button
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="70dp"
        android:id="@+id/btnCadastrarFinalProfissional"
        />
</LinearLayout>
