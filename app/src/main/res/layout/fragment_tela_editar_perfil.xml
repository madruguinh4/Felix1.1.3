<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Fragment_TelaEditaPerfil"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="16dp"
    android:weightSum="1">


    <ImageView
        android:id="@+id/imageEditPerfil"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.47"
        app:srcCompat="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editEditdNome"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="Nome"
            android:imeOptions="actionUnspecified"
            android:inputType="textCapCharacters"
            android:maxLines="1"
            android:singleLine="true" />

        <EditText
            android:id="@+id/editEditSobrenome"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="Sobrenome"
            android:imeOptions="actionUnspecified"
            android:inputType="textCapCharacters"
            android:maxLines="1"
            android:singleLine="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txtEditEmail"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="E-mail"
            android:imeOptions="actionUnspecified"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:singleLine="true" />

        <EditText
            android:id="@+id/txtEditTelefone"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:hint="Telefone"
            android:imeOptions="actionUnspecified"
            android:inputType="phone"
            android:maxLines="1"
            android:singleLine="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txtEditSenha"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Senha"
            android:imeOptions="actionUnspecified"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="16dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <Button
            android:id="@+id/btnEditCdastar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Salvar"
            android:textSize="18dp" />
    </LinearLayout>

</LinearLayout>
