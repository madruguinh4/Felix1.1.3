<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    android:layout_marginTop="50dp"
    android:layout_marginLeft="150dp"
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Você esta cancelado o  Serviço: "
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/txt"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.SearchResult.Title" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="right">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoria"
            android:id="@+id/txtServicosAgendados2Profissao"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.SearchResult.Title" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:text="Subcategoria"
            android:id="@+id/txtServicosAgendados2Descricao" />


    </LinearLayout>

    <Button
        android:id="@+id/buttonCancelarServico"
        android:layout_width="130dp"
        android:layout_height="60sp"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="210dp"
        android:text="Cancelar Serviço" />

</LinearLayout>
