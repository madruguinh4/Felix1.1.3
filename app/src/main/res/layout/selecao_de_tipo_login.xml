<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:gravity="center"
        android:background="#506aff"
        android:textColor="#ffffff"
        android:text="Como você desejar utilizar o App" />

    <TextView
        android:id="@+id/editTextCLiente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="90dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:inputType="textPersonName"
        android:text="Contratar Serviços" />

    <ImageView
        android:id="@+id/imageViewCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/cliente" />

    <TextView
        android:id="@+id/editTextProfissional"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:inputType="textPersonName"
        android:text="Prestar Serviços" />


    <ImageView
        android:id="@+id/imageViewProfissional"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/profissional" />
</LinearLayout>
